<h2>Volunteer Details</h2>
<p><strong>Name:</strong> <%= @volunteer.name %></p>
<p><strong>Project:</strong> <%= @project.title %></p>
<p><strong>Hours:</strong> <%= @volunteer.hours %></p>

<form action="/volunteers/<%= @volunteer.id %>/delete" method="post">
  <input type="hidden" name="_method" value="patch">
<button type="submit" class="btn btn-primary">Delete Volunteer</button>
</form>

<h2>Update Volunteer</h2>
<form class="" action="/volunteers/<%= @volunteer.id %>/edit" method="post">
  <input type="hidden" name="_method" value="patch">
  <div class="form-group">
    <label for="name">New Name</label>
    <input type="text" name="name" class="form-control">
  </div>
  <div class="form-group">
    <label for="hours">New total hours</label>
    <input type="text" name="hours" class="form-control">
  </div>

  <div class="form-group">
    <label for="project_ids">New Project</label>
    <select name="project_id" class="form-control">
      <% @projects.each do |project| %>
        <option value='<%= project.id %>'><%= project.title %></option>
    <% end %>
    </select>
  </div>

  <button type="submit" class="btn btn-primary">Update Volunteer</button>
</form>
